<!DOCTYPE html>
<html>
  <%- include('../partials/head'); %>
  <header>
    <%- include('../partials/header'); %>
  </header>
  <body class="text-center">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <main role="main" class="inner cover">
        <section class="row">
          <h1>Home</h1>
        </section>
        <hr>
        <section class="content">
          <article class="table-responsive-sm">
            <table class="table table-hover">
              <thead>
              <tr>
                <th>Title</th>
                <th>Creator</th>
                <th>Create Date</th>
                <th>Content</th>
                <th>Search Term</th>
              </tr>
              </thead>
              <tbody>
              <% if(isLoggedIn){ %>
                <% blogs.forEach((blogs) => { %>
                  <tr>
                    <td><%= blogs.title %></td>
                    <td><%= blogs.creator %></td>
                    <td><%= blogs.createDate %></td>
                    <td><%= blogs.content %></td>
                    <td><%= blogs.searchTerm %></td>
                  </tr>
                <% }); %>
              <% } else { %>
                <h3>No content available</h3>
                <h3>Please Login to start creating your own blogs</h3>
              <%}%>
            </tbody>
            </table>
          </article>
          <img src="http://localhost:3000/images/blog_illustration.jpg", title="Blog illustration",alt="Blog illustration"/>
        </section>
      </main>
      <%- include('../partials/footer'); %>
    </div>
  </body>
</html>

