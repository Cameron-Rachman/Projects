<!DOCTYPE html>
<html>
  <%- include('../partials/head'); %>
  <header>
    <%- include('../partials/header'); %>
  </header>
  <body class="text-center">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <main role="main" class="inner cover">
        <section class="row">
          <h1>Login</h1>
        </section>
        <hr>
        <section class="content">
            <form autocomplete="off" action = "/login" method="POST">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <form>
                                <div class="form-group">
                                    <label class="small mb-1">Username</label>
                                    <input type="text" class="form-control py-4" placeholder="Username *" name="username" id="username" required/>
                                </div>
                                <div class="form-group">
                                    <label class="small mb-1">Password</label>
                                    <input type="password" class="form-control py-4" placeholder="Password *" name="password" id="password" required/>
                                </div>
                                <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                    <a class="btn btn-secondary" href="/">Cancel</a>
                                    <input type="submit" class="btn btn-primary" value="Login" />
                                </div>
                              </form>
                        <div class="small"><a href="/registration">Need an account? Sign up!</a></div>
                    </div>
                </div>
          </form>
          <img src="http://localhost:3000/images/blog_illustration.jpg", title="Blog illustration",alt="Blog illustration"/>
        </section>
      </main>
      <%- include('../partials/footer'); %>
    </div>
  </body>
</html>
