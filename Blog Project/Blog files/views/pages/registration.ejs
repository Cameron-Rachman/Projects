<!DOCTYPE html>
<html>
  <%- include('../partials/head'); %>
  <header>
    <%- include('../partials/header'); %>
  </header>
  <body class="text-center">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <main role="main" class="inner cover">
        <section class="row">
          <h1>Registration</h1>
        </section>
        <hr>
        <section class="content">
            <form autocomplete="off" action = "/registration" method="POST">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <% if (errorMessage) { %>
                                <h6 class = "errorMessage"><%= errorMessage %></h6>
                            <% } %>
                            <%- include('../partials/detailsForm'); %>
                            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                <a href="/" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-primary">Register</button>
                            </div>
                            <div class="small"><a href="/login">Have an account? Go to login</a></div>      
                        </div>                       
                    </div>
                </div>
            </form>
          <img src="http://localhost:3000/images/blog_illustration.jpg", title="Blog illustration",alt="Blog illustration"/>
        </section>
      </main>
      <%- include('../partials/footer'); %>
    </div>
  </body>
</html>
